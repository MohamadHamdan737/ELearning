@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "MyAccount";
}
<link href="~/css/MyAccount.css" rel="stylesheet" />

<div class="container light-style flex-grow-1 container-p-y">

    <h4 class="font-weight-bold py-3 mb-4">
        Account 
    </h4>

    <div class="card overflow-hidden">
        <div class="row no-gutters row-bordered row-border-light">
            <div class="col-md-3 pt-0">
                <div class="list-group list-group-flush account-settings-links">
                    <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account-general">General</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" asp-action="Changepassword">Change password</a>   </div>
            </div>
            <div class="col-md-9">
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="account-general">

                        <hr class="border-light m-0">

                        <div class="card-body">
                            <div class="form-group">
                                <label class="form-label" style="color:black"><i class="bi bi-person mr-2"></i>Username</label>
                                <label  class="form-control mb-1" style="background :white"  >@Model.UserName</label>
                            </div>
                  
                            <div class="form-group">
                                <label class="form-label" style="color:black"><i class="bi bi-envelope mr-2"></i>   Email</label>
                                <label class="form-control mb-1" style="background :white">@Model.Email</label>
                         
                            </div>
                            <div class="form-group">
                                <label class="form-label" style="color:black"><i class="bi bi-telephone mr-2"></i>   Phone Number</label>
                                <label class="form-control" style="background :white">@Model.PhoneNumber</label>
                                <a asp-action="Index" asp-controller="Home" class="btn btn-primary" style="margin-top:5px">Cancel </a>

                            </div>
                      
                        </div>

                    </div>
                
                 
              
                  
               
                </div>
            </div>
        </div>

        </div>
    </div>


<div class="bp">
</div>
