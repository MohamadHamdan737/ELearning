@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<link href="~/css/style2.css" rel="stylesheet" />
<link href="~/css/MyAccount.css" rel="stylesheet" />

    <form asp-action="ResetPassword" asp-controller="Account" method="post" class="form-horizontal" role="form">
     

        <input asp-for="Code" type="hidden" />


        
            <div class="container light-style flex-grow-1 container-p-y">

                <h4 class="font-weight-bold py-3 mb-4">
                    Reset Password
                </h4>

                 <hr class="border-light m-0">
                   <div class="form-group">
                       <label asp-for="Email" style="color:black"><i class="bi bi-envelope me-1"></i>Email</label>
                       <input type="email"  name="Email" class="form-control" />
                       <span asp-validation-for="Email" class="text-danger"></span>
                   </div>
                   <div class="form-group">
                       <label asp-for="Password" style="color:black"><i class="bi bi-key me-1"></i>New Password</label>
                       <input type="password" name="Password" class="form-control" />
                       <span asp-validation-for="Password" class="text-danger"></span>
                   </div>
                   <div class="form-group">
                      <label asp-for="ConfirmPassword" style="color:black"><i class="bi bi-key me-1"></i>Repeat new password</label>
                       <input type="password"  name="ConfirmPassword" class="form-control" />
                       <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                   </div>

                   <button type="submit" class="btn btn-lg btn-outline-primary" style="margin-top:5px">Reset Password</button>

                                </div>



