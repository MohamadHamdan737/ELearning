@model IEnumerable<Instructor>

@{
    ViewData["Title"] = "Instructors";
    Layout = "_AdminLayout";
}




<link href="~/css/style2.css" rel="stylesheet" />
<div class="ml">
<form asp-action="Index" method="post">
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-5"> Instructors</h1>
            </div>


                <div class="text-center wow fadeInUp">
                    <a asp-action="Create" asp-controller="Instructor" class="btn btn-lg btn-outline-success"><i class="bi bi-plus mr-2"></i>Create Instructor</a>
                    @if (ViewBag.isDeleted > 0)
                    {
                        <a asp-action="Soft" asp-controller="Instructor" class="btn btn-lg btn-outline-danger"><i class="bi bi-trash3-fill mr-2"></i>Restor</a>

                    }
                   
            </div>
            
        </div><br />




        <div class="row g-4">
            @foreach (var item in Model)
            {



                if (item.IsDeleted == false)
                {

                        <div class="col-md-12 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="team-item bg-light">
                            <div class="overflow-hidden">
                                @if (item.Images == null)
                                {
                                    <img class="img-fluid" src="~/img/noUser.png" alt="">
                                }
                                <div class="img">
                                    <img class="img-fluid" width="500" src="~/Upload/@item.Images" alt="">
                                </div>
                            </div>
                            @if (item.InstagramLink != null || item.FacebookLink != null || item.TwitterLink != null)
                            {
                                <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                                    <div class="bg-light d-flex justify-content-center pt-2 px-1">

                                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                                            <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                                @if (item.FacebookLink != null)
                                                {
                                                    <a class="btn btn-sm-square btn-primary mx-1" href="@item.FacebookLink"><i class="fab fa-facebook-f"></i></a>

                                                }
                                                @if (item.TwitterLink != null)
                                                {
                                                    <a class="btn btn-sm-square btn-primary mx-1" href="@item.TwitterLink"><i class="fab fa-twitter"></i></a>

                                                }
                                                @if (item.InstagramLink != null)
                                                {
                                                    <a class="btn btn-sm-square btn-primary mx-1" href="@item.InstagramLink"><i class="fab fa-instagram"></i></a>

                                                }
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            }
                            <div class="text-center p-4">
                                <h5 class="mb-0">@item.InstructorName</h5><br />
                                <h5>@item.Majoring</h5><br />


                                <br />
                                    <div class="d-flex border-top">

                                        <small class="flex-fill text-center border-end py-2"><a asp-action="Details" asp-controller="Instructor" class="btn " asp-route-id="@item.InstructorId"><i class="bi bi-three-dots mr-2"></i>Details</a> </small>
                                        <small class="flex-fill text-center border-end py-2"><a asp-action="Delete" asp-controller="Instructor" class="btn " asp-route-id="@item.InstructorId"><i class="bi bi-trash3-fill mr-2"></i>Delete</a></small>
                                        <small class="flex-fill text-center border-end py-2"><a asp-action="Edit" asp-controller="Instructor" class="btn " asp-route-id="@item.InstructorId"><i class="bi bi-pencil mr-2"></i>Edite</a></small>
                                    </div>
                            </div>
                        </div>
                    </div>

                }

            }
        </div>



    </div>
   
</form>
 </div>