@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "_AdminLayout";
}

<link href="~/css/Style2.css" rel="stylesheet" />
<div class="ml">
    <div class="form-group">
        <label class="col-md-4 control-label" for="button1id"></label>
        <div class="col-md-8">
        </div>
    </div>
    @foreach (var user in Model)
    {
        <div class="card overflow-hidden">
            <div class="row no-gutters row-bordered row-border-light">
            
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" >

                            <hr class="border-light m-0">

                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label"><i class="bi bi-person mr-2"></i>Username</label>
                                    <label class="form-control mb-1">@user.UserName</label>
                                </div>

                                <div class="form-group">
                                    <label class="form-label"><i class="bi bi-envelope mr-2"></i>Email</label>
                                    <label class="form-control mb-1">@user.Email</label>
                                </div>
                                <div class="form-group">
                                    <label class="form-label"><i class="bi bi-telephone mr-2"></i>Phone Number</label>
                                    <label class="form-control"> @user.PhoneNumber</label>
                                </div>
                                <a asp-action="DeleteUser" class="btn btn-outline-danger" asp-route-id="@user.Id"><i class="bi bi-trash3-fill mr-2"></i>Delete User</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

           </div>
    }
</div>