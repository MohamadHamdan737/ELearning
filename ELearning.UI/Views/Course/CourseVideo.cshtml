@model List<Videos>
@{
    ViewData["Title"] = "CourseVideo";
}


<link href="~/css/MyAccount.css" rel="stylesheet" />
<hr />

<link href="~/css/Style2.css" rel="stylesheet" />
<hr />
<form asp-action="StartCourse" enctype="multipart/form-data">
    @if (Model.Any())
    {
        <div class="card-body pb-2" id="video">

            @foreach (var item in Model)
            {
                <div class="container text-center">
                    <div class="row">
                        <div class="col">
                            <video class="video" controls>
                                <source src="data:video/mp4;base64,@Convert.ToBase64String(item.VideoFileData)" type="video/mp4" />
                                Your browser does not support the video tag.
                            </video>
                        </div>
                        <div class="col">
                            <h5>@item.Titel</h5>
                        </div>
                        <br/>
                        <div class="col">
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
                <hr/>
                <br/>
            }
        </div>
            <div class="card-body media align-items-center">
            <a asp-action="DownloadImage" asp-route-id="@ViewBag.courseId" class="btn btn-lg btn-outline-success"><i class="bi bi-download me-1"></i> Certificate</a>
            </div>
    }
   else
    {
        <h3>This course does not contain videos </h3>
    }   
</form>






















