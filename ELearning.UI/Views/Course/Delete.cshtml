@model Courses

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}
<link href="~/css/Style2.css" rel="stylesheet" />

<div class="ml">
<h3>Are you sure you want to delete this Course?</h3>

   
    <hr />

    
    <form asp-action="Delete">

            <div class="ml3">
               
                    <div class="container-xxl py-5">
                        <div class="container">
                            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                               
                            </div>


                 




                        </div><br />

                        <div class="row g-4 justify-content-center">
                            
                                

                                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">

                                        <div class="course-item bg-light">

                                            <div class=" overflow-hidden">



                                                @if (Model.FileDataImage == null)
                                                {
                                                   <img class="img-fluid" src="~/img/noUser.png" alt="">
                                                 }
                                                <div class="img">
                                    <img class="img-fluid" width="500" controls src="data:image/png;base64,@Convert.ToBase64String(Model.FileDataImage)" alt="Image" />
                                </div>
                                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                                </div>
                                            </div>
                                            <div class="img">
                                                <div class="text-center p-4 pb-0">


                                                    <h5 class="mb-4">@Model.CoursesName</h5>
                                                </div>
                                            </div>
                                            <div class="d-flex border-top">
                                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary mr-2"></i>@Model.InstructorName</small>
                                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary mr-2"></i>@Model.Hours</small>
                                            </div>
                                            
                                                <div class="d-flex border-top">

                                        <small class="flex-fill text-center border-end py-2"><input type="submit" value="Delete" class="btn btn-lg" /> </small>
                                        <small class="flex-fill text-center border-end py-2"><a asp-action="Course" asp-controller="Admin" class="btn btn-lg ">Cancel</a> </small>
                                                </div>
                                            


                                        </div>
                                    </div>
                            
                        </div>

                    </div>
                
            </div>
    </form>
</div>
