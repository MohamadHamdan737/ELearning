@model Instructor

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<link href="~/css/Style2.css" rel="stylesheet" />
<div class="ml">
    <h3>Are you sure you want to delete this Instructor?</h3>
<div>
    
    <hr />
    <form asp-action="Delete" method="post">
            <div class="ml3">
            <div class="container-xxl py-5">
                <div class="container">
                  
                    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
                       
                       
                   
                </div><br />
                <div class="row g-4">
                            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                <div class="team-item bg-light">
                                    <div class="overflow-hidden">
                                @if (Model.Images == null)
                                        {
                                            <img class="img-fluid" src="~/img/noUser.png" alt="">
                                        }
                                        <div class="img">
                                    <img class="img-fluid" width="500" src="~/Upload/@Model.Images" alt="">
                                        </div>
                                    </div>
                            @if (Model.InstagramLink != null || Model.FacebookLink != null || Model.TwitterLink != null)
                                    {
                                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                                            <div class="bg-light d-flex justify-content-center pt-2 px-1">

                                                <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                                                    <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                                @if (Model.FacebookLink != null)
                                                        {
                                                    <a class="btn btn-sm-square btn-primary mx-1" href="@Model.FacebookLink"><i class="fab fa-facebook-f"></i></a>

                                                        }
                                                @if (Model.TwitterLink != null)
                                                        {
                                                    <a class="btn btn-sm-square btn-primary mx-1" href="@Model.TwitterLink"><i class="fab fa-twitter"></i></a>

                                                        }
                                                @if (Model.InstagramLink != null)
                                                        {
                                                    <a class="btn btn-sm-square btn-primary mx-1" href="@Model.InstagramLink"><i class="fab fa-instagram"></i></a>

                                                        }
                                                    </div>
                                                </div>


                                            </div>
                                       </div>
                                    
                                

                    }
                                <div class="text-center p-4">
                                    <h5 class="mb-0">@Model.InstructorName</h5><br />
                                    <h5>@Model.Majoring</h5><br />

                                    <br />
                                </div>
                                <small class="flex-fill text-center border-end py-2"><input type="submit" value="Delete" class="btn btn-lg " /> </small>
                                <small class="flex-fill text-center border-end py-2"><a asp-action="Instructors" asp-controller="Admin" class="btn btn-lg ">Cancel</a> </small>

                            </div>



            </div>

            </div>
            </div>
            </div>





              </form>
</div>
</div>