@model Instructor

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<link href="~/css/MyAccount.css" rel="stylesheet" />
<link href="~/css/Style2.css" rel="stylesheet" />
<hr />
<div class="ml">
    <div class="container light-style flex-grow-1 container-p-y">

        <h4 class="font-weight-bold py-3 mb-4">
            Details Instructor
        </h4>
            <div class="card overflow-hidden">
                <div class="row no-gutters row-bordered row-border-light">
                    <div class="col-md-3 pt-0">
                        <div class="list-group list-group-flush account-settings-links">
                            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account-general">General</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-social-links"><i class="bi bi-link mr-2"></i>Social links</a>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="tab-content">
                            <div class="tab-pane fade active show" id="account-general">

                                <div class="card-body media align-items-center">
                                    <img class="img-fluid" height="100" width="200" src="~/Upload/@Model.Images" alt="">
                                    
                                </div>
                                <hr class="border-light m-0">

                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="form-label">Instructor Name</label>
                                    <label class="form-control mb-1">@Model.InstructorName</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">City</label>
                                    <label class="form-control mb-1">@Model.City</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Email</label>
                                    <label class="form-control mb-1">@Model.Email</label>

                                        <div class="form-group">
                                            <label class="form-label">Majoring</label>
                                        <label class="form-control mb-1">@Model.Majoring</label>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">Created by</label>
                                        <label class="form-control mb-1">@Model.CreatedBy</label>
                                        </div>
                                    </div>
        
                                </div>


                            </div>
                        <div class="card-body pb-2" id="account-social-links">

                            <div class="form-group">
                                <label class="form-label">Twitter</label>
                                <label class="form-control mb-1">@Model.TwitterLink</label>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Facebook</label>
                                <label class="form-control mb-1">@Model.FacebookLink</label>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Instagram</label>
                                <label class="form-control mb-1">@Model.InstagramLink</label>
                            </div>
                            <div class="text-right mt-3">
                                <a asp-action="Instructors" asp-controller="Admin" class="btn btn-lg btn-default">Cancel</a>
                            </div>
                        </div>
                        </div>
                  
                       </div>
             
                </div>
            </div>

        
    </div>
</div>

