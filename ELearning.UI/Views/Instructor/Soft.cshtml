@model IEnumerable<Instructor>

@{
    ViewData["Title"] = "Soft";
    Layout = "_AdminLayout";
}
<link href="~/css/Style2.css" rel="stylesheet" />
<div class="ml2">
<form asp-action="Restore" method="post">

    <div class="row g-4">
        @foreach (var item in Model)
        {
            if (item.IsDeleted == true)
            {
                            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="team-item bg-light">
                    <div class="overflow-hidden">
                        @if (item.Images == null)
                        {
                            <img class="img-fluid" src="~/img/noUser.png" alt="">
                        }
                        <div class="img">
                            <img class="img-fluid" src="~/Upload/@item.Images" alt="">
                        </div>
                    </div>

                    <div class="text-center p-4">
                        <h5 class="mb-0">@item.InstructorName</h5><br />
                        <h5>@item.Majoring</h5><br />
                        @if (item.InstagramLink != null || item.FacebookLink != null || item.TwitterLink != null)
                        {
                            <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                                <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                    @if (item.FacebookLink != null)
                                    {
                                        <a class="btn btn-sm-square btn-primary mx-1" href="@item.FacebookLink"><i class="fab fa-facebook-f"></i></a>

                                    }
                                    @if (item.TwitterLink != null)
                                    {
                                        <a class="btn btn-sm-square btn-primary mx-1" href="@item.TwitterLink"><i class="fab fa-twitter"></i></a>

                                    }
                                    @if (item.InstagramLink != null)
                                    {
                                        <a class="btn btn-sm-square btn-primary mx-1" href="@item.InstagramLink"><i class="fab fa-instagram"></i></a>

                                    }
                                </div>
                            </div>
                        }

                        <br />
                        <div>

                            <small class="flex-fill text-center border-end py-2"><a asp-action="Restor" asp-controller="Instructor" class="btn " asp-route-id="@item.InstructorId">Restor</a> </small>
                        </div>
                    </div>
                </div>
            </div>

            }



        }
    </div>
    
</form>
</div>
