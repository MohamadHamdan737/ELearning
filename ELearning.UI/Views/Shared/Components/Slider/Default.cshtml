@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}
<link href="~/css/style2.css" rel="stylesheet" />

@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> _signInManager;

<div class="container-fluid p-0 mb-5">
    <div class="owl-carousel header-carousel position-relative">
        @foreach (var slider in Model)
        {
            
            <div class="owl-carousel-item position-relative">
                <div class="slider">
                <img class="img-fluid"   src="~/SliderImage/@slider.Image" alt="">
                </div>
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-sm-10 col-lg-8">
                                <h5 class="text-primary text-uppercase mb-3 animated slideInDown">Best Online Course</h5>
                                <h1 class="display-3 text-white animated slideInDown">@slider.MainTitale </h1>
                                <p class="fs-5 text-white mb-4 pb-2">@slider.Subject</p>
                                <a href="/About/Index" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Read More</a>
                                @if (!_signInManager.IsSignedIn(User))
                                {
                                    <a href="/Account/Login" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Join Now</a>

                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Create" asp-controller="Slider" asp-route-id="@slider.SliderId" class="btn btn-primary py-md-3 px-md-5  animated slideInLeft"><i class="bi bi-plus mr-2"></i>Add</a>
                                    <a asp-action="Edite" asp-controller="Slider" asp-route-id="@slider.SliderId" class="btn btn-light py-md-3 px-md-5 animated slideInRight"><i class="bi bi-pencil mr-2"></i>Edite</a>
                                    <a asp-action="Delete" asp-controller="Slider" asp-route-id="@slider.SliderId" class="btn  btn-danger py-md-3 px-md-5 animated slideInRight"><i class="bi bi-trash3-fill mr-2"></i>Delete</a>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>
        }
    </div>

</div>




