@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> _signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - UI</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="/Home/Index" class="navbar-brand">
            <h1 class="m-0 text-primary"><i class="fa fa-book me-3"></i>LearnHub</h1>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="/Home/Index" class="nav-item nav-link ">Home</a>
                <a href="/About/Index" class="nav-item nav-link">About</a>
                <a href="/Course/Index" class="nav-item nav-link">Courses</a>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                    <div class="dropdown-menu fade-down m-0">
                        <a href="/Instructor/Index" class="dropdown-item">Our Team</a>
                        @if (_signInManager.IsSignedIn(User))
                        {
                            <a href="/Account/MyAccount" class="dropdown-item">My Account</a>
                            <a href="/Course/MyFavorite" class="dropdown-item">My Favorite</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Admin/Index" class="dropdown-item">Admin page</a>
                        }
                    </div>
                </div>
            </div>
            @if (!_signInManager.IsSignedIn(User))
            {
                <a href="/Account/Login" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Login<i class="bi bi-box-arrow-in-right ms-3"></i></a>
            }
            @if (_signInManager.IsSignedIn(User))
            {
                <a href="/Account/Logout" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Logout<i class="bi bi-box-arrow-left ms-3"></i></a>
            }
        </div>
    </nav>
    <div>@RenderBody()</div>
    <link href="~/css/footer.css" rel="stylesheet" />
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row align-items-end">
                


                <div class="col-lg-4 col-md-6 ">
                    <h4 class="text-white mb-3">Quick Link</h4>
                    <a class="btn btn-link" href="/Home/Index">Home</a>
                    <a class="btn btn-link" href="/About/Index">About</a>
                    <a class="btn btn-link" href="/Course/Index">Course</a>
                    <a class="btn btn-link" href="/Instructor/Index">Our Team</a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h4 class="text-white mb-3">Contact</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Amman Jordan</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+962 778060713</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>learnhub@gmail.com</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 ">
                    <div class="text-white  mb-3">
                        <a href="/Home/Index" class="navbar-brand">
                            <h1 class="mt-n2 text-uppercase text-white"><i class="fa fa-book me-3"></i>LearnHub</h1>
                        </a>
                    </div>
                    <div class="row g-2 pt-2">
                        <p class="m-0" style="color:white">your trusted partner in the journey of lifelong learning and personal growth. At LearnHub, we are passionate about education and believe that knowledge has the power to transform lives</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @await Component.InvokeAsync("NToastNotify")
</body>

</html>