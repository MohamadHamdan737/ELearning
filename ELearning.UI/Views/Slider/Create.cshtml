@model Slider

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
<link href="~/css/Style2.css" rel="stylesheet" />

<hr />
<div class="ml">
    <h5>Add New Slider</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File" class="control-label">Slider Image</label>
                <input asp-for="File" type="file" name="File" accept="image/*" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MainTitale" class="control-label">Main Titale</label>
                <input asp-for="MainTitale" class="form-control" />
                <span asp-validation-for="MainTitale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Subject</label>
                <textarea rows="4" asp-for="Subject" class="form-control" ></textarea>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-lg btn-outline-primary" />
                    <a asp-action="Index" asp-controller="Home" class="btn btn-lg btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>



